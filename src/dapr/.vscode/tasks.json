            "type": "process",
            "args": [
            "build",
            "${workspaceFolder}/dapr.gql.product/dapr.gql.product.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        // 6. Hot Chocolate Gateway (GraphQL Stitching)
        {
            "label": "build-stitching",
            "command": "dotnet",
            "type": "process",
            "args": [
            "build",
            "${workspaceFolder}/gql.gateway/gql.gateway.csproj",
            "/property:GenerateFullPaths=true",
            "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        // Dapr definitions----------------------------------------------------
        // 0. gateway
        {
            "appId": "dapr-gql-gateway",
            "appPort":      10000,
            "httpPort":     20000,
            "grpcPort":     30000,
            "metricsPort":  40000,
            "placementAddress": "localhost:6010",
            "label": "daprd-debug-gateway",
            "type": "daprd",
            "problemMatcher": {
            "pattern": [
                {
                    "regexp": ".",
                    "file": 1,
                    "location": 2,
                    "message": 3
                }
            ],
            "background": {
                "beginsPattern": "^.*starting Dapr Runtime.*",
                "endsPattern": "^.*waiting on port.*"
                }
            },
            "dependsOn": "build-gateway"
        },
        {
            "appId": "dapr-gql-gateway",
            "label": "daprd-down-gateway",
            "type": "daprd-down"
        },
        // 1. basket
        {
